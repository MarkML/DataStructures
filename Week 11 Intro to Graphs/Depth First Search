#include <iostream>
#include <vector>
#include <stack>       //for backtracking
using namespace std;

class Graph {
private:
    // Adjacency matrix: adjMatrix[u][v] = 1 if there is an edge u--v, else 0
    vector<vector<int>> adjMatrix;
    int numVertices;

public:
    // Constructor: create V × V matrix initialized to 0
    Graph(int vertices) : numVertices(vertices) {
        adjMatrix = vector<vector<int>>(vertices, vector<int>(vertices, 0));
    }

    // Add undirected edge u -- v
    void addEdge(int u, int v) {
        adjMatrix[u][v] = 1;   // Edge u → v
        adjMatrix[v][u] = 1;   // Edge v → u  (undirected)
    }

    // Print adjacency matrix
    void printGraph() const {
        cout << "Adjacency Matrix Representation:\n";
        for (int i = 0; i < numVertices; i++) {
            for (int j = 0; j < numVertices; j++) {
                cout << adjMatrix[i][j] << " ";
            }
            cout << endl;
        }
    }

   
   
    void DFS(int startVertex) const {
        vector<bool> visited(numVertices, false);  // Track visited nodes
        stack<int> st;                             // Stack for DFS

        // Mark start vertex as visited
        visited[startVertex] = true;

        // Push start vertex onto the stack
        st.push(startVertex);

        cout << "DFS starting from vertex " << startVertex << ": ";

        // Continue until stack is empty
        while (!st.empty()) {
            // Pop the top of the stack
            int curr = st.top();
            st.pop();

            // Visit (print) the current vertex
            cout << curr << " ";

            // Explore each neighbor of the current vertex 'curr' row
            for (int neighbor = 0; neighbor < numVertices; neighbor++) {
                if (adjMatrix[curr][neighbor] == 1 && !visited[neighbor]) {
                    visited[neighbor] = true;
                    st.push(neighbor);
                }
            }
        }

        cout << endl;
    }
};

int main() {
    Graph g(8);  // Create a graph with 8 vertices (0–7)

    // SAME edges as your previous example
    g.addEdge(1, 5);
    g.addEdge(1, 3);
    g.addEdge(1, 4);
    g.addEdge(3, 6);
    g.addEdge(0, 1);
    g.addEdge(0, 5);
    g.addEdge(7, 4);
    g.addEdge(1, 2);

    // Print the graph's adjacency matrix
    g.printGraph();

    // Run DFS starting from vertex 3
    g.DFS(3);

    return 0;
}
